<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF005B9C</item>
        <item name="colorPrimaryDark">#00497c</item>
        <item name="colorAccent">@color/dnBlue</item>
        <item name="android:textColorSecondary">#005B9C</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#00497c</item>
        <item name="colorAccent">@color/dnBlue</item>
        <item name="android:textColorSecondary">#005B9C</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MainMenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dnBlue</item>
        <item name="colorPrimaryDark">#00497c</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
