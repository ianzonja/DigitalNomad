<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enter_workspace"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <TextView
        android:id="@+id/txtview_add_worskpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_workspace"
        android:textColor="@color/dnBlue"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview_add_worskpace"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/add_workspace_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workspace_name">

        <EditText
            android:id="@+id/add_workspace_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/country" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workspace_country">

        <EditText
            android:id="@+id/add_workspace_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/city" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workspace_city">

        <EditText
            android:id="@+id/add_workspace_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/adress" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/add_Workspace_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/add"
        android:layout_marginTop="35dp"
        android:background="@color/dnBlue"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/workspace_adress"/>

</RelativeLayout>
