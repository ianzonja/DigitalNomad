<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enter_workspace"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <RelativeLayout
        android:id="@+id/relative_layout_enter_workspace"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtview_add_worskpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_workspace"
        android:textColor="@color/dnBlue"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview_add_worskpace"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/dnBlue">

        <EditText
            android:id="@+id/add_workspace_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workspace_name"
        android:textColorHint="@color/dnBlue">

        <EditText
            android:id="@+id/add_workspace_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/country"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workspace_country"
        android:textColorHint="@color/dnBlue">

        <EditText
            android:id="@+id/add_workspace_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/city"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workspace_city"
        android:textColorHint="@color/dnBlue">

        <EditText
            android:id="@+id/add_workspace_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/address"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/workspace_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workspace_adress"
        android:textColorHint="@color/dnBlue">

        <EditText
            android:id="@+id/add_workspace_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:hint="@string/description"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/txt_add_workspace_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_a_photo"
        android:layout_below="@id/workspace_description"
        android:layout_marginTop="15dp"
        android:textColor="@color/dnBlue"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/add_workspace_photo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/workspace_description"
        android:layout_toEndOf="@+id/txt_add_workspace_photo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/dnBlue"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="@string/addPlus"/>

    <Button
        android:id="@+id/add_Workspace_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/add"
        android:layout_marginTop="35dp"
        android:background="@color/dnBlue"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/add_workspace_photo"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar_enter_workspace"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:indeterminate="false"
        android:visibility="gone" />

</RelativeLayout>
